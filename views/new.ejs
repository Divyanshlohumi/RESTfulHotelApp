<%- include ('partials/header') %>

<div class="ui main text container segment">
    <div class="ui huge header">New Hotel</div>
    <form class="ui form" action="/hotels" method="POST">
        <div class="field">
            <label>Title</label>
            <input type="text" name="hotel[title]" placeholder="title">
        </div>
        <div class="field">
            <label>Image</label>
            <input type="text" name="hotel[image]" placeholder="image">
        </div>
        <div class="field">
            <label>Hotel Content</label>
            <textarea name="hotel[body]" placeholder="content"></textarea>
        </div>
        <div class="field">
            <label>Price</label>
            <input type="number" name="hotel[price]" placeholder="price" min="0">
        </div>
        <div class="field">
            <label>Place</label>
            <input type="text" name="hotel[place]" placeholder="place">
        </div>
        <div class="field">
            <label>Amenities</label>
            <input type="text" name="hotel[amenities]" placeholder="amenities">
        </div>
        <div class="field">
            <label>Rating</label>
            <input type="number" name="hotel[rating]" placeholder="rating" min="0" step="0.1" max="5">
        </div>
        <div class="field">
            <label>Discount</label>
            <input type="number" name="hotel[discount]" placeholder="discount" min="0" max="100">
        </div>
        <input class="ui violet big basic button" type="submit">
    </form>
</div>

<%- include ('partials/footer') %>