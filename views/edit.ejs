<%- include ('partials/header') %>

<div class="ui main text container segment">
    <div class="ui huge header">Edit <%= hotel.title %></div>
    <form class="ui form" action="/hotels/<%= hotel._id %>?_method=PUT" method="POST">
        <div class="field">
            <label>Title</label>
            <input type="text" name="hotel[title]" value="<%= hotel.title %>">
        </div>
        <div class="field">
            <label>Image</label>
            <input type="text" name="hotel[image]" value="<%= hotel.image %>">
        </div>
        <div class="field">
            <label>Hotel Content</label>
            <textarea name="hotel[body]"><%= hotel.body %></textarea>
        </div>
        <div class="field">
            <label>Price</label>
            <input type="number" name="hotel[price]" value="<%= hotel.price %>" min="0">
        </div>
        <div class="field">
            <label>Place</label>
            <input type="text" name="hotel[place]" value="<%= hotel.place %>">
        </div>
        <div class="field">
            <label>Amenities</label>
            <input type="text" name="hotel[amenities]" value="<%= hotel.amenities %>">
        </div>
        <div class="field">
            <label>Rating</label>
            <input type="number" name="hotel[rating]" value="<%= hotel.rating %>" min="0" step="0.1" max="5">
        </div>
        <div class="field">
            <label>Discount</label>
            <input type="number" name="hotel[discount]" value="<%= hotel.discount %>" min="0" max="100">
        </div>
        <input class="ui violet big basic button" type="submit">
    </form>
</div>

<%- include ('partials/footer') %>